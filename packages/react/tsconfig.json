{
  "compilerOptions": {
    "target": "es2015",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    // "declarationDir": "./types",
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "module": "ESNext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
