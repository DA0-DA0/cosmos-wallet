{
  "compilerOptions": {
    "target": "ES2015",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
