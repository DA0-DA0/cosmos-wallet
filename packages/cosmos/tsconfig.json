{
  "compilerOptions": {
    "target": "es2021",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "../core/src/name-service.ts"],
  "exclude": ["node_modules"]
}
